<div class="panel-group">
  <div class="panel panel-success">
    <div class="panel-heading">
      <h2 class="panel-title">
        All Users</h2>
    </div>
    <div class="panel-body">
      <table>
        <thead>
          <tr>
            <th>Username</th>
            <th>User email</th>
            <th colspan="1"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.username %></td>
              <td><%= user.email %></td>
              <td><%= link_to 'Show', pirate_path(user), class: "btn btn-success btn-xs" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

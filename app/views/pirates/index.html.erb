<h1>All Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>User email</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', pirate_path(user), class: "btn btn-success btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
